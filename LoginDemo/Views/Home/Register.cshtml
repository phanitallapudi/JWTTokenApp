@model LoginDemo.Models.RegisterModel
@{
    ViewData["Title"] = "Home Page";
}

<div style="padding-top:50px"></div>
<div style="padding:50px;">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div>
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { role = "form" }))
                {
                    <div>
                        @Html.AntiForgeryToken()
                        <div>
                            <label>Username</label><br />
                        </div>
                        <div>
                            @Html.TextBoxFor(m => m.Username, new {@class ="form-control txtbox"})
                        </div>
                        <div style="padding-top:20px;"></div>
                        <div>
                            <label>Email</label><br />
                        </div>
                        <div>
                            @Html.TextBoxFor(m => m.Email, new {@class="form-control txtbox"})
                        </div>
                        <div>
                            <label>Password</label><br />
                        </div>
                        <div>
                            @Html.PasswordFor(m => m.Password, new {@class="form-control txtbox"})
                        </div>
                    </div>
                    <div style="padding-left:35%; width:40%">
                        <div style="padding-top:20px;">
                            <input class="btn btn-primary btn-lg rph-login-button" type="submit" value="Login" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>